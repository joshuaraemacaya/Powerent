extends ../template/master.pug

block content
	each detail in details
		section.hero-item
			.boxcontain
				h1.title
					font(size="7" color="white") Details
					a.button.is-info.is-pulled-right(href=`/chat?id=${detail.owner_id}`) Send Message
					hr
					.column
					.box
						form(method="POST" action="/item")
							.field(style="color: black")
								<center>
								strong
									font(size="7" color="black")= `${detail.item_name}` 
								hr
								</center>
								h1= `Description:`
								<center>
								h1=`${detail.item_desc}`
								</center>
								h1= `Category: ${detail.cat_name}`
								h1= `Owner: ${detail.user_fullname}`
								h1= `Price(/hr): P${detail.price_per_hr}`
								h1= `Available: ${detail.cur_qty}`
								input(type="number" name="iid" value=`${detail.item_id}` hidden="true")
								br
								a.button.is-danger.is-pulled-left(href="javascript:history.back()") Back
								input.button.is-primary.is-pulled-right.is-bold(type="submit" value="Add to Cart")